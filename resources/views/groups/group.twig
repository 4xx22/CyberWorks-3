{% extends 'templates/template.twig' %}

{% block title %}
    | {{ group.group_name }}
{% endblock %}

{% block style %}
    <link href="{{ base_url() }}/assets/vendors/switchery/dist/switchery.min.css" rel="stylesheet" />
{% endblock %}

{% block content %}
<form class="form-horizontal form-label-left" method="post" action="{{ path_for('group.update', {'id': group.id }) }}">
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Group Settings</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"> Title</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                {% if auth.permissions.can_edit_group_name %}
                                    <input type="text" class="form-control" value="{{ group.group_name }}">
                                {% else %}
                                    <input type="text" class="form-control" value="{{ group.group_name }}" disabled>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                    {% if useIps %}
                    <div class="form-group">
                        <label class="col-sm-3 control-label"> IPS ID</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                {% if auth.permissions.can_edit_group_ips_id %}
                                    <input type="number" class="form-control" value="{{ group.group_id }}">
                                    <span class="input-group-btn">
                                            <button type="button" class="btn btn-primary" id="group_id_save"><i class="fa fa-save"></i></button>
                                        </span>
                                {% else %}
                                    <input type="text" class="form-control" value="{{ group.group_id }}" disabled>
                                    <span class="input-group-btn">
                                            <a href="" class="btn btn-danger" disabled><i class="fa fa-save"></i></a>
                                        </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <button type="submit" class="btn btn-warning" style="display: block; width:100%;"  data-toggle="modal" data-target=".compensate">Save</button>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9">
            <div class="row">
                <h1 class="text-center">Group Permissions</h1>
                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                        {% if auth.permissions.can_edit_group_perms_player %}
                            <li role="presentation" class="active">
                                <a href="#player_perms" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Player</a>
                            </li>
                        {% endif %}
                        {% if auth.permissions.can_edit_group_perms_vehicle %}
                            <li role="presentation">
                                <a href="#vehicle_perms" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Vehicle</a>
                            </li>
                        {% endif %}
                        {% if auth.permissions.can_edit_group_perms_settings %}
                            <li role="presentation">
                                <a href="#admin_perms" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Admin</a>
                            </li>
                        {% endif %}
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        {% if auth.permissions.can_edit_group_perms_player %}
                            <div role="tabpanel" class="tab-pane fade active in " id="player_perms" aria-labelledby="home-tab">
                                <h2>View:</h2>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Players</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="players" {% if group.can_view_players %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player" {% if group.can_view_player %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Civ Lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_civ_lic" {% if group.can_view_player_civ_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Cop Lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_cop_lic" {% if group.can_view_player_cop_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Med Lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_med_lic" {% if group.can_view_player_ems_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Notes</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_notes" {% if group.can_view_player_notes %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Edit Log</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_log" {% if group.can_view_player_edit_log %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Player Vehicles</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_veh" {% if group.can_view_player_vehicles %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <hr>
                                <h2>Edit:</h2>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Cash</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_cash" {% if group.can_edit_cash %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Bank</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_bank" {% if group.can_edit_bank %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Donator</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_donator" {% if group.can_edit_donator %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Jailed</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_jailed" {% if group.can_edit_jailed %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Civ lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_civ_lic" {% if group.can_edit_civ_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Cop Rank</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_cop_rank" {% if group.can_edit_cop_rank %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Cop Lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_cop_lic" {% if group.can_edit_cop_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Medic Rank</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_med_rank" {% if group.can_edit_ems_rank %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Medic lic</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_med_lic" {% if group.can_edit_ems_lic %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <hr>
                                <h2>Admin:</h2>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Admin Rank</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_admin" {% if group.can_edit_admin_rank %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Blacklist</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_blacklist" {% if group.can_blacklist %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Compensate</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_edit_donator" {% if group.can_compensate %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Add Note</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_add_note" {% if group.can_add_note %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Delete Note</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="player_del_note" {% if group.can_delete_note %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if auth.permissions.can_edit_group_perms_vehicle %}
                            <div role="tabpanel" class="tab-pane fade" id="vehicle_perms" aria-labelledby="home-tab">
                                <div class="row">

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <h2>View:</h2>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Vehicles</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="vehicles" {% if group.can_view_vehicles %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> View Vehicle</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="vehicle" {% if group.can_view_vehicle %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <h2>Edit:</h2>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Vehicle</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="vehicle_edit" {% if group.can_edit_vehicle %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if auth.permissions.can_edit_group_perms_vehicle %}
                            <div role="tabpanel" class="tab-pane fade" id="admin_perms" aria-labelledby="home-tab">
                                <h2>Edit:</h2>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Player Permission Group</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="perms_player_edit" {% if group.can_edit_group_perms_player %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Vehicle Permission Group</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="perms_vehicle_edit" {% if group.can_edit_group_perms_vehicle %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Is Super User</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="perms_superUser" {% if group.is_superUser %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"> Edit Admin Group Permissions</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="checkbox" class="js-switch" id="perms_edit" {% if group.can_edit_group_perms %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                </div>
                                            </div>
                                        </div>

                                        {% if useIps %}
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label"> Edit Ips Connect ID</label>
                                                <div class="col-sm-9">
                                                    <div class="input-group">
                                                        <input type="checkbox" class="js-switch" id="perms_edit_ips_id" {% if group.can_edit_group_ips_id %} checked="" {% endif %} style="display: none;" data-switchery="true">
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ csrf.field | raw }}
</form>
{% endblock %}

{% block script %}
    <script>
        var csrfTokenName = "{{ csrf.javascript.tokenName }}";
        var csrfTokenValue = "{{ csrf.javascript.tokenValue }}";
    </script>

    <!-- Datatables -->
    <script src="{{ base_url() }}/assets/vendors/datatables.net/js/jquery.dataTables.min.js" type="text/javascript"></script>
